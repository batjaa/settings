# Configs
config defaultToCurrentScreen true
config nudgePercentOf screenSize
config resizePercentOf screenSize
config secondsBetweenRepeat 0.1
config checkDefaultsOnLoad true
config focusCheckWidthMax 3000

# Defaults
alias finder 'Finder'
alias terminal 'iTerm'
alias browser 'Google Chrome'
alias editor 'Sublime Text'
alias musicPayer 'Spotify'
alias chat 'Slack'

# Monitor Aliases
alias mon-laptop  0
alias mon-main    1
alias mon-right   2

# Resize Aliases
alias resize-left-top   move screenOriginX;screenOriginY                             screenSizeX/2;screenSizeY/2
alias resize-top        move screenOriginX;screenOriginY                             screenSizeX;screenSizeY/2
alias resize-right-top  move screenOriginX+screenSizeX/2;screenOriginY               screenSizeX/2;screenSizeY/2
alias resize-left       move screenOriginX;screenOriginY                             screenSizeX/2;screenSizeY
alias resize            move screenOriginX;screenOriginY                             screenSizeX;screenSizeY
alias resize-right      move screenOriginX+screenSizeX/2;screenOriginY               screenSizeX/2;screenSizeY
alias resize-left-bot   move screenOriginX;screenOriginY+screenSizeY/2               screenSizeX/2;screenSizeY/2
alias resize-bot        move screenOriginX;screenOriginY+screenSizeY/2               screenSizeX;screenSizeY/2
alias resize-right-bot  move screenOriginX+screenSizeX/2;screenOriginY+screenSizeY/2 screenSizeX/2;screenSizeY/2

# Position Aliases
alias 1-main  move screenOriginX;screenOriginY                               screenSizeX;screenSizeY         ${mon-laptop}
alias 1-bot   move screenOriginX;screenOriginY+screenSizeY/2                 screenSizeX;screenSizeY/2       ${mon-laptop}

alias 2-main  move screenOriginX;screenOriginY                               screenSizeX;screenSizeY         ${mon-main}
alias 2-bot   move screenOriginX;screenOriginY+screenSizeY/2                 screenSizeX;screenSizeY/2       ${mon-main}
alias 2-bot-l move screenOriginX;screenOriginY+screenSizeY/2                 screenSizeX/3;screenSizeY/2     ${mon-main}
alias 2-bot-m move screenOriginX+screenSizeX/3;screenOriginY+screenSizeY/2   screenSizeX/3;screenSizeY/2     ${mon-main}
alias 2-bot-r move screenOriginX+2*screenSizeX/3;screenOriginY+screenSizeY/2 screenSizeX/3;screenSizeY/2     ${mon-main}
alias 2-mid   move screenOriginX+screenSizeX/8;screenOriginY+screenSizeY/8   3*screenSizeX/4;3*screenSizeY/4 ${mon-main}
alias 2-top   move screenOriginX;screenOriginY                               screenSizeX;screenSizeY/2       ${mon-main}
alias 2-top-l move screenOriginX;screenOriginY                               screenSizeX/2;screenSizeY/2     ${mon-main}
alias 2-top-m move screenOriginX+screenSizeX/6;screenOriginY                 2*screenSizeX/3;screenSizeY/2   ${mon-main}
alias 2-top-r move screenOriginX+screenSizeX/2;screenOriginY                 screenSizeX/2;screenSizeY/2     ${mon-main}
alias 2-left  move screenOriginX;screenOriginY                               screenSizeX/2;screenSizeY       ${mon-main}
alias 2-right move screenOriginX+screenSizeX/2;screenOriginY                 screenSizeX/2;screenSizeY       ${mon-main}

alias 3-main  move screenOriginX;screenOriginY                               screenSizeX;screenSizeY         ${mon-right}
alias 3-left  move screenOriginX;screenOriginY                               screenSizeX/2;screenSizeY       ${mon-right}
alias 3-right move screenOriginX+screenSizeX/2;screenOriginY                 screenSizeX/2;screenSizeY       ${mon-right}
alias 3-l-bot move screenOriginX;screenOriginY+screenSizeY/2                 screenSizeX/2;screenSizeY/2     ${mon-right}
alias 3-l-top move screenOriginX;screenOriginY                               screenSizeX/2;screenSizeY/2     ${mon-right}
alias 3-r-top move screenOriginX+screenSizeX/2;screenOriginY                 screenSizeX/2;screenSizeY/2     ${mon-right}
alias 3-r-bot move screenOriginX+screenSizeX/2;screenOriginY+screenSizeY/2   screenSizeX/2;screenSizeY/2     ${mon-right}

# 3 Monitor layout
layout 3monitors 'iTerm'                                  ${1-main}
layout 3monitors 'Google Chrome':REPEAT_LAST,TITLE_ORDER_REGEX=^Developer\sTools\s-\s.+$  ${3-main} | ${2-main}
layout 3monitors 'Sublime Text'                           ${2-main}
layout 3monitors 'Firefox':REPEAT                         ${2-mid}
layout 3monitors 'Spotify':REPEAT                         ${3-l-top}
layout 3monitors 'Slack':REPEAT                           ${1-main}

# 2 Monitor layout
# layout 2monitors 'iTerm':SORT_TITLE                       ${2-bot-l} | ${2-bot-m} | ${2-bot-r}
# layout 2monitors 'Google Chrome':REPEAT                   ${1-main}
# layout 2monitors 'MacVim'                                 ${2-top-r} | ${2-top-l} | ${2-top-m}
# layout 2monitors 'Flex Builder'                           ${2-top-l}
# layout 2monitors 'GitX':REPEAT                            ${1-main}
# layout 2monitors 'Ooyala Player Debug Console'            ${1-main}
# layout 2monitors 'Firefox':REPEAT                         ${2-mid}
# layout 2monitors 'Xcode':REPEAT                           ${2-top}
# layout 2monitors 'Eclipse':REPEAT                         ${2-bot}
# layout 2monitors 'Spotify':REPEAT                         ${1-main}

# 1 Monitor layout
# layout 1monitor 'iTerm':SORT_TITLE,REPEAT                ${1-main}
layout 1monitor 'Google Chrome':REPEAT                   ${1-main}
# layout 1monitor 'MacVim':REPEAT                          ${1-main}
# layout 1monitor 'Flex Builder':REPEAT                    ${1-main}
# layout 1monitor 'GitX':REPEAT                            ${1-main}
# layout 1monitor 'Ooyala Player Debug Console':REPEAT     ${1-main}
# layout 1monitor 'Firefox':REPEAT                         ${1-main}
# layout 1monitor 'Xcode':REPEAT                           ${1-main}
# layout 1monitor 'Eclipse':REPEAT                         ${1-main}
# layout 1monitor 'Spotify':REPEAT                         ${1-main}

# Default Layouts
default 3monitors resolutions:${mon-laptop};${mon-main};${mon-right}
default 2monitors resolutions:${mon-laptop};${mon-main}
default 1monitor  resolutions:${mon-laptop}

# Basic location Bindings
bind pad1:ctrl ${resize-left-bot}
bind pad2:ctrl ${resize-bot}
bind pad3:ctrl ${resize-right-bot}
bind pad4:ctrl ${resize-left}
bind pad5:ctrl ${resize}
bind pad6:ctrl ${resize-right}
bind pad7:ctrl ${resize-left-top}
bind pad8:ctrl ${resize-top}
bind pad9:ctrl ${resize-right-top}
bind up:ctrl;alt ${resize}
bind down:ctrl;alt ${resize-bot}
bind left:ctrl;alt ${resize-left}
bind right:ctrl;alt ${resize-right}

# Resize Bindings
# NOTE: some of these may *not* work if you have not removed the expose/spaces/mission control bindings
# bind right:ctrl resize +10% +0
# bind left:ctrl  resize -10% +0
# bind up:ctrl    resize +0   -10%
# bind down:ctrl  resize +0   +10%
# bind right:alt  resize -10% +0 bottom-right
# bind left:alt   resize +10% +0 bottom-right
# bind up:alt     resize +0   +10% bottom-right
# bind down:alt   resize +0   -10% bottom-right

# Push Bindings
# NOTE: some of these may *not* work if you have not removed the expose/spaces/mission control bindings
# bind right:ctrl;shift push right bar-resize:screenSizeX/3
# bind left:ctrl;shift  push left  bar-resize:screenSizeX/3
# bind up:ctrl;shift    push up    bar-resize:screenSizeY/2
# bind down:ctrl;shift  push down  bar-resize:screenSizeY/2

# Nudge Bindings
# NOTE: some of these may *not* work if you have not removed the expose/spaces/mission control bindings
# bind right:ctrl;alt nudge +10% +0
# bind left:ctrl;alt  nudge -10% +0
# bind up:ctrl;alt    nudge +0   -10%
# bind down:ctrl;alt  nudge +0   +10%

# Throw Bindings
# NOTE: some of these may *not* work if you have not removed the expose/spaces/mission control bindings
bind pad1:ctrl;alt      throw ${mon-laptop} resize
bind pad2:ctrl;alt      throw ${mon-main} resize
bind pad3:ctrl;alt      throw ${mon-right} resize
bind right:ctrl;alt;cmd throw right resize
bind left:ctrl;alt;cmd  throw left  resize
bind up:ctrl;alt;cmd    throw up    resize
bind down:ctrl;alt;cmd  throw down  resize

# Focus Bindings
# NOTE: some of these may *not* work if you have not removed the expose/spaces/mission control bindings
# bind right:cmd    focus right
# bind left:cmd     focus left
# bind up:cmd       focus up
# bind down:cmd     focus down
# bind up:cmd;alt   focus behind
# bind down:cmd;alt focus behind
bind `:alt focus ${musicPayer}
bind 1:alt focus ${finder}
bind 2:alt focus ${terminal}
bind 3:alt focus ${browser}
bind 4:alt focus ${editor}
bind 5:alt focus ${chat}


# Layout Bindings
bind 1:ctrl;alt layout 1monitor
bind 3:ctrl;alt layout 3monitors

# Window Hints
bind esc:cmd hint ASDFJKLGHWERTYUIO

# Test Cases
source .slate.test if_exists

